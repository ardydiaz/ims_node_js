<%- include('layout/header') %>
<div class="container">
    <div class="row">
         <div class="col-lg-6 mx-auto mt-4">
            <div class="card">
                <h5 class="card-header">Add Product</h5>
                <div class="card-body">

                    <form action="/add" method="post" enctype="multipart/form-data">
                          <div class="mb-3">
                            <label>Product Name</label>
                            <input type="text" class="form-control" name="product_name" placeholder="Product name">
                          </div>
                          <div class="mb-3">
                            <label>Product code</label>
                            <input type="text" class="form-control" name="product_code" placeholder="Product name">
                          </div>
                          <div class="mb-3">
                            <label>Product Image</label>
                            <input type="file" class="form-control" name="product_image" placeholder="Product name">
                          </div>
                          <div class="mb-3">
                            <label>Product Description</label>
                            <textarea class="form-control" name="product_description" rows="3"></textarea>
                          </div>
                          <input type="submit" class="btn btn-primary" value="Add Product"/>
                    </form>
                  
                  
                </div>
              </div>
         </div>
    </div>
</div>
<%- include('layout/footer') %>
