<%- include('layout/header') %>
<div class="container">

    <div class="row my-4">
            <!-- Display the message if it exists -->
            <% if (message) { %>
                <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                    <%= message.message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
         <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-stripe text-center">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Product Image</th>
                            <th>Product Code</th>
                            <th>Product Name</th>
                            <th>Product Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% products.forEach(function(product) { %>
                                <tr class="align-middle">
                                    <td><%= product._id %></td>
                                    <td>
                                        <img src="<%= product.product_image %>" alt="<%= product.product_name %>" class="img-thumbnail" style="width: 50px; height: 50px;">
                                    </td>
                                    <td><%= product.product_code %></td>
                                    <td><%= product.product_name %></td>
                                    <td><%= product.product_description %></td>
                                    <td>
                                        <a href="/edit/<%= product._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= product._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tr>
                    </tbody>
                </table>
            </div>
         </div>
    </div>
</div>
<%- include('layout/footer') %>
