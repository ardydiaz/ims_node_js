<%- include('layout/header') %>
<div class="container">
    <div class="row">
         <div class="col-lg-6 mx-auto mt-4">
            <div class="card">
                <h5 class="card-header">Edit Product</h5>
                <div class="card-body">

                    <form action="/update/<%=product._id%>" method="post" enctype="multipart/form-data">
                          <div class="mb-3">
                            <label>Product Name</label>
                            <input type="text" class="form-control" name="product_name" placeholder="Product name" value="<%= product.product_name %>">
                          </div>
                          <div class="mb-3">
                            <label>Product code</label>
                            <input type="text" class="form-control" name="product_code" placeholder="Product name"  value="<%= product.product_code %>">
                          </div>
                          <div class="mb-3">
                            <label>Product Image</label>
                            <input type="file" class="form-control" name="product_image" placeholder="Product image">
                            <img src="/<%= product.product_image%>" width="100" class="img-thumbnail mt-1">
                          </div>
                          <div class="mb-3">
                            <label>Product Description</label>
                            <textarea class="form-control" name="product_description" rows="3"><%= product.product_description%></textarea>
                          </div>
                          <input type="hidden" name="old_image" value="<%= product.product_image%>">
                          <input type="submit" class="btn btn-primary" value="Update Product"/>
                    </form>
                  
                  
                </div>
              </div>
         </div>
    </div>
</div>
<%- include('layout/footer') %>
